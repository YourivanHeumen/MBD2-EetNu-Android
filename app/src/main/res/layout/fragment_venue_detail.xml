<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/detailsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="20dip"
            android:text="name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30sp" />

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="325dp"
            android:layout_height="380dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:stretchColumns="1"
            android:layout_marginTop="30px">
            <TableRow android:background="@drawable/border">
                <TextView
                    android:id="@+id/cityLabel"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:layout_column="0"
                    android:paddingLeft="8px"
                    android:paddingRight="3px"
                    android:paddingTop="1px"
                    android:paddingBottom="1px"
                    android:minWidth="40dp"
                    android:minHeight="40dp"/>
                <TextView
                    android:id="@+id/detailsCity"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:layout_column="1"
                    android:paddingLeft="8px"
                    android:paddingTop="1px"
                    android:paddingRight="3px"
                    android:paddingBottom="1px"
                    android:minWidth="40dp"
                    android:minHeight="40dp"/>
            </TableRow>
            <TableRow android:background="@drawable/border">
                <TextView
                    android:id="@+id/streetLabel"
                    android:layout_height="wrap_content"
                    android:text="Street"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:layout_column="0"
                    android:paddingLeft="8px"
                    android:paddingRight="3px"
                    android:paddingTop="1px"
                    android:paddingBottom="1px"
                    android:minWidth="40dp"
                    android:minHeight="40dp"/>
                <TextView
                    android:id="@+id/detailsStreet"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:layout_column="1"
                    android:paddingLeft="8px"
                    android:paddingTop="1px"
                    android:paddingRight="3px"
                    android:paddingBottom="1px"
                    android:minWidth="40dp"
                    android:minHeight="40dp"/>
            </TableRow>
            <TableRow android:background="@drawable/border">
                <TextView
                    android:id="@+id/postalcodeLabel"
                    android:layout_height="wrap_content"
                    android:text="Zipcode"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:layout_column="0"
                    android:paddingLeft="8px"
                    android:paddingRight="3px"
                    android:paddingTop="1px"
                    android:paddingBottom="1px"
                    android:minWidth="40dp"
                    android:minHeight="40dp"/>
                <TextView
                    android:id="@+id/detailsPostalcode"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:layout_column="1"
                    android:paddingLeft="8px"
                    android:paddingTop="1px"
                    android:paddingRight="3px"
                    android:paddingBottom="1px"
                    android:minWidth="40dp"
                    android:minHeight="40dp"/>
            </TableRow>
            <TableRow android:background="@drawable/border">
                <TextView
                    android:id="@+id/phoneLabel"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:layout_column="0"
                    android:paddingLeft="8px"
                    android:paddingRight="3px"
                    android:paddingTop="1px"
                    android:paddingBottom="1px"
                    android:minWidth="40dp"
                    android:minHeight="40dp"/>
                <TextView
                    android:id="@+id/detailsPhone"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:layout_column="1"
                    android:paddingLeft="8px"
                    android:paddingTop="1px"
                    android:paddingRight="3px"
                    android:paddingBottom="1px"
                    android:minWidth="40dp"
                    android:minHeight="40dp"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</RelativeLayout>